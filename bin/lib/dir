#!/usr/bin/env bash

# Load my personal folder settings
config="$HOME/.config/dir/list"

# Arg parsing
if [[ $# -eq 1 ]] && [[ $1 == 'cfg' ]]; then
	$EDITOR $config
	exit 0
fi

source $config

function getList() {
	for name in "${!folders[@]}"
		do echo "$name"
	done
}

list=`getList`

choice=`echo "$list" | fzf --height 40%`

if [[ -n $choice ]]; then
	echo "${folders[$choice]}"
fi
